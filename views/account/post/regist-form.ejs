<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Regist New Post</title>
  <%- include("../../_share/stylesheets.ejs") %>    
</head>
<body>
  <%- include("../../_share/navbar.ejs") %>
  <div class="container">
    <div class="page-header">
      <h1>新規記事登録</h1>
    </div>
    <form action="/account/post/regist" class="form-horizontal" method="POST">
      <!-- ejsにはlocals配下にerrorsがある -->
      <% 
        var errors = locals.errors || {};
        var original = locals.original || {};        
      %>
      <% if (locals.errors) { %>
        <div class="alert alert-danger">
        <% for(var key in errors) { %>
          <div><i class="fa fa-exclamation-circle fa-fw mr-2"></i><%= errors[key] %></div>
        <% } %>
      </div>
      <% } %>
      <div class="form-group <% if (errors.url) { %>has-error<%} %>" >
        <label for="url" class="col-sm-2 control-label">URL</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="url" name="url" value="<%= original.url %>" />
        </div>
      </div>
      <div class="form-group <% if (errors.url) { %>has-error<%} %>" >
        <label for="title" class="col-sm-2 control-label">タイトル</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="title" name="title" value="<%= original.title %>" />            
        </div>
      </div>
      <div class="form-group" >
        <label for="content" class="col-sm-2 control-label">本文</label>
        <div class="col-sm-10">
          <textarea name="content" id="content" cols="30" rows="6" class="form-control" ><%= original.content %></textarea>
        </div>
      </div>
      <div class="form-group" >
        <label for="keywords" class="col-sm-2 control-label">キーワード</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="keywords" name="keywords" value="<%= original.keywords %>" />            
        </div>
      </div>
      <div class="form-group" >
        <label for="authors" class="col-sm-2 control-label">著者</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="authors" name="authors" value="<%= original.authors %>" />            
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <input type="submit" value="送信" class="btn btn-primary">
        </div>
      </div>
    </form>
  </div>  
</body>
</html>