<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Account Login Page</title>
  <%- include("../_share/stylesheets.ejs") %>
</head>
<body>
  <%- include("../_share/navbar.ejs") %>
  <div class="container">
    <div class="page-header">
      <h1><i class="fa fa-sign-in fa-fw"></i> ログイン</h1>
    </div>
    <div class="col-sm-offset-3 col-sm-6">
      <form action="/account/login" class="form-horizontal" method="POST">
        <div class="form-group">
          <label for="username" class="col-sm-4 control-label">username</label>
          <div class="col-sm-8">
            <input type="text" name="username" class="form-control" id="username" value="" />
          </div>
        </div>
        <div class="form-group">
          <label for="password" class="col-sm-4 control-label">password</label>
          <div class="col-sm-8">
            <input type="password" name="password" class="form-control" id="password" value="">
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-4 col-sm-8">
            <input type="submit" class="btn btn-primary" value="ログイン" />
          </div>
        </div>
      </form>
      <% if (message && message.length !== 0) { %>
        <div class="alert alert-danger">
          <i class="fa fa-exclamation-circle fa-fw"></i><%= message %>
        </div>
      <% } %>
    </div>
  </div>
</body>
</html>